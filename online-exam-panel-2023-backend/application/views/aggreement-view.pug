extends layout
block aggrement_page_css_link
    link(rel='stylesheet' href="/bootstrap/css/font-awesome.min.css")
    link(rel='stylesheet' href='/bootstrap/css/common_styles.css')
    link(rel='stylesheet' href='/bootstrap/css/agreement-view.css')
block inline_css

block content
    .container-fluid
        .row
            .col-xs-8.col-sm-8.col-md-8.col-lg-8(style='margin-top: 10px;')
                if(isSessionMessage)
                    .alert.c-alert-msg(class=isSessionMessage.class)
                        strong #{isSessionMessage.msg}
                .panel.panel-info
                    div.aggreement-heading 
                        div(style='display: inline-block; vertical-align: middle;')
                            div(style="display:inline-block;vertical-align: middle; margin-right: 2rem;")
                                i.fa.fa-hourglass-start.fa-2x
                            div(style="display:inline-block;vertical-align: middle;")
                                span(style='display: inline-block; margin-bottom: 0.5rem;') You are about to start the exam  
                                br
                                span #{test_info.exam_info.test_name}

                        div(style="display:inline-block; vertical-align: middle; float: right; margin-top: 4px;")
                            span(style="display:inline-block; vertical-align: middle;") View Instruction Set ::&nbsp;
                            span(style='display:inline-block; vertical-align: center;')
                                select(style="display:inline-block; vertical-align: middle;" onchange="setAgreementTestLang(this,event)")
                                    option(value="eng") English 
                                    option(value="mar") मराठी 
                    .panel-body
